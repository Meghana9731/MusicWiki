<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">



    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"
            android:text="musicwiki"
            android:textColor="@color/teal_700"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Welcome!"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/expand"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_expand"
            android:drawableRight="@drawable/ic_expand"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:text="Choose a genre to start with"
            android:textSize="20sp" />


    </LinearLayout>


    <Button
        android:id="@+id/rock1"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/rock"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/rock2"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/rock1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/rock3"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/rock2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/rock"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/l1"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/button3"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/button4"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/rock1"
        android:layout_toRightOf="@+id/rock1"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/button5"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/button3"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/rock1"
        android:layout_toRightOf="@+id/rock1"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/button4"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/button2"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/rock1"
        android:layout_toRightOf="@+id/rock1"
        android:background="@drawable/rock" />

    <Button
        android:id="@+id/button2"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_below="@+id/l1"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/rock1"
        android:layout_toRightOf="@+id/rock1"
        android:background="@drawable/rock" />




</RelativeLayout>